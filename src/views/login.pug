extends main.pug 

append HEAD 
	+meta("Login", "Login page")
	meta(name="robots" content="index, follow, noarchive")

	script(src="/js/login.js") 
	link(rel="stylesheet" href="/css/login.css")

	title !{i18n('LOGIN')} | !{Web.config.get("text.title")}

block BODY 
	div.title !{i18n('LOGIN')}
	form(action="/login" method="post") 
		label(for="login") !{i18n("IDENTIFIER")}
		sahyg-textarea#login(
			options={spellcheck:"false", autocorrect:"off", autocapitalize:"off", autofocus: true, autocomplete:"username"}, 
			rounded=true, 
			outline=true, 
			icon= String.fromCharCode(0xf007),
			placeholder=i18n("IDENTIFIER")
		)
		label(for="password") !{i18n("PASSWORD")}
		sahyg-textarea#password(
			options={spellcheck:"false", autocorrect:"off", autocapitalize:"off", autocomplete:"current-password"}, 
			rounded=true, 
			outline=true, 
			type="password"
			icon= String.fromCharCode(0xf084),
			placeholder=i18n("PASSWORD")
		)
		sahyg-button.submit(full-color=true, full-width=true, content=i18n("SUBMIT"))
		input(type="submit")
	div.links
		a.forget-password(href="/reset_password") !{i18n("FORGET_PASSWORD")}
		span !{i18n("OR")}
		span 
			| !{i18n("NO_ACCOUNT")}
			a(href="/signup") !{i18n("CREATE_ACCOUNT")}