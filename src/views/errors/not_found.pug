extends ../main.pug

append HEAD
	+meta("404", "Page not found")

	script(src="/js/error.js")
	link(rel="stylesheet" href="/css/error.css") 

	title 404 | !{Web.config.get("text.title")}


block BODY
	div.content
		span.title 404
		span.url
		span.description !{i18n("404_DESCRIPTION")}
		div.buttons
			a.back(href="#")
				sahyg-button(content=i18n("RETURN_PREVIOUS") rounded=true)
			a.home(href="/")
				sahyg-button(content=i18n("RETURN_HOME") rounded=true)
			a.home(href="/contact")
				sahyg-button(content=i18n("CONTACT_US") rounded=true)
